<% layout('layouts/boilerplate') %>
    <h1>All Campgrounds</h1>
    <span><a href="/campgrounds/new">Add a new campground</a></span><br>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        <% for (let campground of campgrounds) {%>
            <div class="col px-3" style="width: 18rem;">
                <a href="/campgrounds/<%= campground._id %>">
                    <div class="card border-primary">
                        <img src="<%= campground.image %> " class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= campground.title%>
                            </h5>
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item">
                                $
                                <%= campground.price %>
                            </li>
                            <li class="list-group-item">
                                <%= campground.location %>
                            </li>
                        </ul>
                        <div class="card-body">
                            <a href="/campgrounds/<%= campground._id %>/edit" class="edit"><button>Edit</button></a>
                        </div>
                    </div>
                </a>
            </div>
            <%}%>
    </div>
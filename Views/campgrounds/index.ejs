<% layout('layouts/boilerplate') %>
    <h1>All Campgrounds</h1>
    <span><a href="/campgrounds/new">Add a new campground</a></span><br>
        <% for (let campground of campgrounds) {%>
            <div class="card mb-3">
                <a href="/campgrounds/<%= campground._id %>" class="text-decoration-none text-muted">
                    <div class="row">
                        <div class="col-md-4">
                            <img src="<%= campground.image %> " class="card-img-top">
                        </div>
                        <div class="col-md-8">
                            <h5 class="card-title">
                                <%= campground.title%>
                            </h5>
                            <p class="card-text">
                                <%= campground.description%>
                            </p>
                            <a href="/campgrounds/<%= campground._id %>/edit" class="btn btn-primary">Edit</a>
                        </div>
                    </div>
                </a>
            </div>
        <%}%>
    
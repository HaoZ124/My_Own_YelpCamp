<% layout('layouts/boilerplate') %>
    <h1>Add a new campground</h1>
    <form action="/campgrounds" method="post">
        <div>
            <label for="title">Enter the campground title</label>
            <input type="text" id="title" name="campground[title]">
        </div>
        <div>
            <label for="location">Enter the campground location</label>
            <input type="text" id="location" name="campground[location]">
        </div>
        <button>Add a new campground</button>
    </form>
    <a href="/campgrounds">Return to campgrounds</a>